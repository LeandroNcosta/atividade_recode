package com.agencia.model;

import java.math.BigDecimal;
import java.util.Date;

public class Passagem {
	private int id;
	private String compania;
	private Boolean idaEvolta;
	private Date data;
	private int taxaServico;
	private int taxaTaxaEmbarque;
	private String tipoVoo;
	private int quantidade;
	private Boolean promocao;
	private double valorTotal;
	private String cnpjCompania;
	private BigDecimal valor;
	private Destino destino;

	// construtores

	public Passagem() {
		super();
	}

	public Passagem(String compania, Boolean idaEvolta, Date data, int taxaServico, int taxaTaxaEmbarque,
			double valorTotal, String tipoVoo, int quantidade, int promocao, String cnpjCompania, Destino idDestino) {
		super();
		this.compania = compania;
		this.idaEvolta = idaEvolta;
		this.data = data;
		this.taxaServico = taxaServico;
		this.taxaTaxaEmbarque = taxaTaxaEmbarque;
		this.valorTotal = valorTotal;
		this.tipoVoo = tipoVoo;
		this.quantidade = quantidade;
		this.promocao = promocao;
		this.cnpjCompania = cnpjCompania;
		this.idDestino = idDestino;
	}

	// getters and setters

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public String getCompania() {
		return compania;
	}

	public void setCompania(String compania) {
		this.compania = compania;
	}

	public Boolean getIdaEvolta() {
		return idaEvolta;
	}

	public void setIdaEvolta(Boolean idaEvolta) {
		this.idaEvolta = idaEvolta;
	}

	public Date getData() {
		return data;
	}

	public void setData(Date data) {
		this.data = data;
	}

	public int getTaxaServico() {
		return taxaServico;
	}

	public void setTaxaServico(int taxaServico) {
		this.taxaServico = taxaServico;
	}

	public int getTaxaTaxaEmbarque() {
		return taxaTaxaEmbarque;
	}

	public void setTaxaTaxaEmbarque(int taxaTaxaEmbarque) {
		this.taxaTaxaEmbarque = taxaTaxaEmbarque;
	}

	public double getValorTotal() {
		return valorTotal;
	}

	public void setValorTotal(double valorTotal) {
		this.valorTotal = valorTotal;
	}

	public String getTipoVoo() {
		return tipoVoo;
	}

	public void setTipoVoo(String tipoVoo) {
		this.tipoVoo = tipoVoo;
	}

	public int getQuantidade() {
		return quantidade;
	}

	public void setQuantidade(int quantidade) {
		this.quantidade = quantidade;
	}

	public int getPromocao() {
		return promocao;
	}

	public void setPromocao(int promocao) {
		this.promocao = promocao;
	}

	public String getCnpjCompania() {
		return cnpjCompania;
	}

	public void setCnpjCompania(String cnpjCompania) {
		this.cnpjCompania = cnpjCompania;
	}

	public int getIdDestino() {
		return idDestino.getId();
	}

	public void setIdDestino(Destino idDestino) {
		this.idDestino = idDestino;
	}

	@Override
	public String toString() {
		return "Passagem { \n id=" + id + ",\n compania=" + compania + ",\n idaEvolta=" + idaEvolta + ",\n data=" + data
				+ ",\n taxaServico=" + taxaServico + ",\n taxaTaxaEmbarque=" + taxaTaxaEmbarque + ",\n valorTotal="
				+ valorTotal + ",\n tipoVoo=" + tipoVoo + ",\n quantidade=" + quantidade + ",\n destinoId=" + idDestino
				+ "\n}";
	}

}
