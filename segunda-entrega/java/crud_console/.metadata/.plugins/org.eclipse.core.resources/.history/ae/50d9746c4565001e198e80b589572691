package com.agencia.model;

import java.math.BigDecimal;
import java.util.Date;

public class Pacote {

	private int id;
	private boolean promocao;
	private BigDecimal valorTotal;
	private Hospedagem hospedagem;
	private Passagem passagem;

	public Pacote(Date dataInicio, Date dataFim, int promocao, Hospedagem idHospedagem, Passagem idPassagem) {
		super();
		this.dataInicio = dataInicio;
		this.dataFim = dataFim;
		this.promocao = promocao;
		IdHospedagem = idHospedagem;
		this.idPassagem = idPassagem;
	}

	public Pacote() {
		super();
	}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public Date getDataInicio() {
		return dataInicio;
	}

	public void setDataInicio(Date dataInicio) {
		this.dataInicio = dataInicio;
	}

	public Date getDataFim() {
		return dataFim;
	}

	public void setDataFim(Date dataFim) {
		this.dataFim = dataFim;
	}

	public int getIdHospedagem() {
		return IdHospedagem.getId();
	}

	public void setIdHospedagem(Hospedagem idHospedagem) {
		IdHospedagem = idHospedagem;
	}

	public int getIdPassagem() {
		return idPassagem.getId();
	}

	public void setIdPassagem(Passagem idPassagem) {
		this.idPassagem = idPassagem;
	}

	public int getPromocao() {
		return promocao;
	}

	public void setPromocao(int promocao) {
		this.promocao = promocao;
	}

}
